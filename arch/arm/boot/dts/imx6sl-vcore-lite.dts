/dts-v1/;

#include "imx6sl.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
  model      = "Gromaudio i.MX6SL VCoreLite Board";
  compatible = "fsl,imx6q-vcore-lite", "fsl,imx6sl";

  memory {
    reg = <0x80000000 0x20000000>;
  };

  regulators {
    compatible = "simple-bus";

    reg_1p8v: 1p8v {
      compatible              = "regulator-fixed";
      regulator-name          = "1P8V";
      regulator-min-microvolt = <1800000>;
      regulator-max-microvolt = <1800000>;
      regulator-always-on;
    };

    reg_3p3v: 3p3v {
      compatible              = "regulator-fixed";
      regulator-name          = "3P3V";
      regulator-min-microvolt = <3300000>;
      regulator-max-microvolt = <3300000>;
      regulator-always-on;
    };
    reg_usb_otg1_vbus: usb_otg1_vbus {
      compatible              = "regulator-fixed";
      regulator-name          = "usb_otg1_vbus";
      regulator-min-microvolt = <5000000>;
      regulator-max-microvolt = <5000000>;
      gpio                    = <&gpio4 0 0>;
      enable-active-high;
    };
  };

  pwm-backlight {
    compatible               = "pwm-backlight";
    pwms                     = <&pwm3 0 5000000>;
    brightness-levels        = <0 4 8 16 32 64 128 255>;
    default-brightness-level = <6>;
  };

  csi_v4l2_cap {
    compatible  = "fsl,imx6sl-csi-v4l2";
    csi_id      = <0>;
    status      = "okay";
  };

  ramoops_device {
    compatible   = "fsl,mxc_ramoops";
    record_size  = <524288>;  /*512K*/
    console_size = <262144>;  /*256K*/
    ftrace_size  = <262144>;  /*256K*/
    dump_oops    = <1>;
    status       = "okay";
  };

  gpio-keys {
    compatible = "gpio-keys";
    power {
      label = "Power Button";
      gpios = <&gpio3 30 GPIO_ACTIVE_LOW>;
      linux,code = <KEY_POWER>;
      gpio-key,wakeup;
    };
  };

  codec_hdmi: hdmi {
    compatible = "gromaudio,vbase-hdmi";
    clocks     = <&clks IMX6SL_CLK_EXTERN_AUDIO>;
    status     = "okay";
  };

  sound {
    compatible      = "fsl,imx6q-vcore-lite-vbase",
                      "fsl,imx-audio-vbase";
    model           = "vbase-audio";
    cpu-dai         = <&ssi1>;
    audio-codec     = <&codec_vbase>;
    mux-int-port    = <1>;
    mux-ext-port    = <4>;
  };

  sound-hdmi {
    compatible      = "fsl,imx6q-vcore-lite-vbase",
                      "fsl,imx-audio-vbase-hdmi";
    model           = "hdmi-audio";
    cpu-dai         = <&ssi2>;
    audio-codec     = <&codec_hdmi>;
    mux-int-port    = <2>;
    mux-ext-port    = <3>;
  };
};

&audmux {
  pinctrl-names = "default";
  pinctrl-0     = <&pinctrl_audmux_2>;
  status        = "okay";
};

&ssi1 {
  fsl,mode      = "i2s-slave";
  status        = "okay";
};

&ssi2 {
  fsl,mode      = "i2s-slave";
  status        = "okay";
};

&csi1 {
  status        = "okay";
};

&ecspi3 {
  fsl,spi-num-chipselects = <1>;
  cs-gpios                = <&gpio3 12 0>;
  pinctrl-names           = "default";
  pinctrl-0               = <&pinctrl_ecspi3_1>;
  status                  = "okay";
};

&ecspi4 {
  fsl,spi-num-chipselects = <1>;
  cs-gpios                = <&gpio4 18 0>;
  pinctrl-names           = "default";
  pinctrl-0               = <&pinctrl_ecspi4_1>;
  status                  = "okay";
};

&gpc {
  fsl,cpu_pupscr_sw2iso = <0xf>;
  fsl,cpu_pupscr_sw     = <0xf>;
  fsl,cpu_pdnscr_iso2sw = <0x1>;
  fsl,cpu_pdnscr_iso    = <0x1>;
  fsl,wdog-reset        = <1>;          /* watchdog select of reset source */
};

&i2c1 {
  clock-frequency = <100000>;
  pinctrl-names   = "default";
  pinctrl-0       = <&pinctrl_i2c1_2>;
  status          = "okay";
};

&i2c2 {
  clock-frequency = <100000>;
  pinctrl-names   = "default";
  pinctrl-0       = <&pinctrl_i2c2_2>;
  status          = "okay";
};

&i2c3 {
  clock-frequency = <100000>;
  pinctrl-names   = "default";
  pinctrl-0       = <&pinctrl_i2c3_1>;
  status          = "okay";

  codec_vbase: vbase@20 {
    compatible      = "gromaudio,vbase";
    reg             = <0x20>;
    clocks          = <&clks IMX6SL_CLK_EXTERN_AUDIO>;
  };

  camera: vbase@09 {
    compatible      = "gromaudio,vbase camera";
    reg             = <0x09>;
    pinctrl-names   = "default";
    pinctrl-0       = <&pinctrl_csi_1>;
    clocks          = <&clks IMX6SL_CLK_CSI>;
    clock-names     = "csi_mclk";
    csi_id          = <0>;
    mclk            = <24000000>;
    mclk_source     = <0>;
  };
};

&iomuxc {
  pinctrl-names = "default";
  pinctrl-0     = <&pinctrl_hog>;

	hog {
		pinctrl_hog: hoggrp {
			fsl,pins = <
				MX6SL_PAD_FEC_TX_EN__GPIO4_IO22     0x17059     /* SD1 WP */
				MX6SL_PAD_FEC_TXD1__GPIO4_IO16      0x17059     /* SD1 CD */
        MX6SL_PAD_FEC_RXD0__GPIO4_IO17      0x17059     /* SD1 VSELECT */
        MX6SL_PAD_SD2_DAT7__GPIO5_IO00      0x17059     /* SD2 CD */
        MX6SL_PAD_I2C1_SCL__GPIO3_IO12      0x80000000  /* ECSPI3 CS */
        MX6SL_PAD_FEC_RXD1__GPIO4_IO18      0x80000000  /* ECSPI4 CS */
        MX6SL_PAD_KEY_COL4__GPIO4_IO00      0x80000000  /* USBOTG1 PWR */
        MX6SL_PAD_SD3_CLK__GPIO5_IO18       0x17059     /* USBOTG2 RESET */
        MX6SL_PAD_KEY_COL3__GPIO3_IO30      0x17059     /* POWER BUTTON */
        MX6SL_PAD_KEY_ROW3__GPIO3_IO31      0x130D9     /* USBOTG1_VBUS_EN */
        MX6SL_PAD_REF_CLK_32K__GPIO3_IO22   0x130D9     /* USBOTG1_ID_EN */
			>;
		};
	};
};

&lcdif {
	pinctrl-names  = "default";
	pinctrl-0      = < &pinctrl_lcdif_dat_1
		                 &pinctrl_lcdif_ctrl_1>;
	display        = <&display>;
	status         = "okay";

	display: display {
		bits-per-pixel = <16>;
		bus-width      = <16>;

		display-timings {
			native-mode = <&timing0>;
			timing0: timing0 {
				clock-frequency = <40000000>;
				hactive         = <1280>;
				vactive         = <480>;
				hback-porch     = <14>;
				hfront-porch    = <37>;
				vback-porch     = <10>;
				vfront-porch    = <4>;
				hsync-len       = <14>;
				vsync-len       = <1>;
				hsync-active    = <0>;
				vsync-active    = <0>;
				de-active       = <1>;
				pixelclk-active = <0>;
			};
/*
      timing1: timing1 {
        clock-frequency = <33000000>;
        hactive         = <800>;
        vactive         = <480>;
        hback-porch     = <89>;
        hfront-porch    = <39>;
        vback-porch     = <33>;
        vfront-porch    = <10>;
        hsync-len       = <128>;
        vsync-len       = <2>;
        hsync-active    = <0>;
        vsync-active    = <0>;
        de-active       = <1>;
        pixelclk-active = <1>;
      };
*/
		};
	};
};

&pwm3 {
	pinctrl-names = "default", "sleep";
	pinctrl-0     = <&pinctrl_pwm3_0>;
	pinctrl-1     = <&pinctrl_pwm3_0_sleep>;
	status        = "okay";
};

&pxp {
	status = "okay";
};

&uart1 {
	pinctrl-names = "default";
	pinctrl-0     = <&pinctrl_uart1_1>;
	status        = "okay";
};

&uart2 {
  pinctrl-names = "default";
  pinctrl-0     = <&pinctrl_uart2_1>;
  status        = "okay";
};

&uart3 {
  pinctrl-names = "default";
  pinctrl-0     = <&pinctrl_uart3_1>;
  status        = "okay";
};

&uart4 {
  pinctrl-names = "default";
  pinctrl-0     = <&pinctrl_uart4_2>;
  status        = "okay";
};

&uart5 {
  pinctrl-names = "default";
  pinctrl-0     = <&pinctrl_uart5_1>;
  status        = "okay";
};

&usbotg1 {
  vbus-supply   = <&reg_usb_otg1_vbus>;
  pinctrl-names = "default";
  pinctrl-0     = <&pinctrl_usbotg1_1>;
  disable-over-current;
  imx6-usb-charger-detection;
  status        = "okay";
};

&usbotg2 {
  dr_mode       = "host";
  disable-over-current;
  status        = "okay";
};

&usbh {
  reset-gpios = <&gpio5 18 1>;
  status = "okay";
};

&usdhc1 {
  pinctrl-names = "default", "state_100mhz", "state_200mhz";
  pinctrl-0     = <&pinctrl_usdhc1_2>;
  pinctrl-1     = <&pinctrl_usdhc1_2_100mhz>;
  pinctrl-2     = <&pinctrl_usdhc1_2_200mhz>;
  bus-width     = <8>;
  cd-gpios      = <&gpio4 16 0>;
  wp-gpios      = <&gpio4 22 0>;
  keep-power-in-suspend;
  enable-sdio-wakeup;
  status        = "okay";
};

&usdhc2 {
  pinctrl-names = "default", "state_100mhz", "state_200mhz";
  pinctrl-0     = <&pinctrl_usdhc2_1>;
  pinctrl-1     = <&pinctrl_usdhc2_1_100mhz>;
  pinctrl-2     = <&pinctrl_usdhc2_1_200mhz>;
  cd-gpios      = <&gpio5 0 0>;
  keep-power-in-suspend;
  enable-sdio-wakeup;
  status        = "okay";
};

&epdc {
  status = "disabled";
};

&kpp {
  status = "disabled";
};
